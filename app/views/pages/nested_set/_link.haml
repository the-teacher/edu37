- if opts[:admin]
  - handle = content_tag :div, raw('&nbsp;'), :class=>:handle, :title=>t('pages.move') if current_user.has_role? :pages, :rebuild
  - link= link_to(node.title, page_url(node.zip), :title=>node.title)
  - content= raw(handle.to_s) + controls + link
  %div{:class=>"link#{' root' if root}"}
    = content

- else
  %div{:class=>"link #{'root' if root}"}
    =link_to(node.title, page_path(node.friendly_url), :title=>node.title)

    .page_informer
      %table{:border=>2}
        %tr
          %td
            = show_views_count_for node
            &nbsp;
            = show_comments_count_for node

