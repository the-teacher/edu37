- handle = content_tag :div, raw('&nbsp;'), :class=>:handle, :title=>t('storages.move') if current_user.has_role? :storages, :rebuild
%div{:class=>"link#{' root' if root}"}
  = raw(handle.to_s)
  = controls
  - size = sprintf("%.2f", (node.files_size./1.megabyte.to_f))
  - file_size = content_tag(:b, t('storages.files_size') + size.to_s + ' ' + t('shared.megabytes'))
  = link_to(raw(node.title + file_size), storage_url(node), :title=>node.title, :class=>:folder)
