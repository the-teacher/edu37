      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :zip
    = f.text_field :zip
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :sender_user_id
    = f.text_field :sender_user_id
  .field
    = f.label :sender_user_zip
    = f.text_field :sender_user_zip
  .field
    = f.label :sender_user_login
    = f.text_field :sender_user_login
  .field
    = f.label :recipient_user_id
    = f.text_field :recipient_user_id
  .field
    = f.label :recipient_user_zip
    = f.text_field :recipient_user_zip
  .field
    = f.label :recipient_user_login
    = f.text_field :recipient_user_login
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :remote_ip
    = f.text_field :remote_ip
  .field
    = f.label :user_agent
    = f.text_field :user_agent
  .field
    = f.label :referer_log
    = f.text_field :referer_log
