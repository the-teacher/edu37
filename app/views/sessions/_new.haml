.login
  .violet_header
    = top_rounder
    %h3= t('sessions.new.welcome')
    = bottom_rounder
  .gray_rounder
    .content_rounder
      = form_tag session_path do
        -#%label{:for=>:login}= raw t('sessions.new.login_label')
        -#%span= text_field_tag :login, '', :class=>:input

        %label{:for=>:password}
          Просто введите пароль:
          -#=t('sessions.new.password_label')
        %span
          = password_field_tag :password, '', :class=>:input
        %p.unsefty_workplace
          = check_box_tag 'unsefty_workplace', '1', true, :class=>:check_box
          = t('sessions.new.unsefty_workplace')
        %p
          = submit_tag t('base.enter'), :class=>:submit
      %p
        = link_to t('sessions.forgotten_password'), '#'
      %p
        = link_to t('base.signup'), new_user_url(:subdomain=>false)
    = bottom_bordered_rounder
